{
    "name": "bananaframework/framework",
    "description": "A PHP micro-framework",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "authors": [
        {
            "role": "Developer",
            "name": "Emran Widad",
            "email": "emranwidad91@gmail.com",
            "homepage": "https://emrans.me/"
        }
    ],
    "autoload": {
        "psr-4": {
            "BananaFramework\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "BananaFramework\\Tests\\": "tests/"
        }
    },

    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "league/flysystem": "3.0",
        "minicli/minicli": "^4.2",
        "symfony/yaml": "^7.3"
    },

    "require-dev": {
        "pestphp/pest": "^3.11",
        "psy/psysh": "^0.12.10",
        "symfony/var-dumper": "^7.3"
    },

    "scripts": {
        "analyze": "./vendor/bin/psalm",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    },
    "scripts-descriptions": {
        "analyze": "Run psalm static analysis on project.",
        "test": "Run Pest test suite on project.",
        "test-coverage": "Run Pest test suite with coverage report."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
    
}
