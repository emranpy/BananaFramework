{
    "name": "bananframework/framework",
    "description": "A PHP micro-framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Developer",
            "name": "Emran widad",
            "email": "emranwidad91@gmail.com",
            "homepage": "https://emrans.me/"
        }
    ],
    "autoload": {
        "psr-4": {
            "PHPFox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPFox\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "vimeo/psalm": "^5.13"
    },
    "scripts": {
        "analyze": "./vendor/bin/psalm",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    },
    "scripts-descriptions": {
        "analyze": "Run psalm static analysis on project.",
        "test": "Run pestPHP test suite on project.",
        "test-coverage": "Run pestPHP test suite with coverage report on project."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
